.single-container
  %header 
    = render "products/header"

  %main.login-content
    .login-content__body
      .login-content__body__noaccount
        %p アカウントをお持ちでない方はこちら
        = link_to "/", class:"login-link" do 
          新規会員登録
      .login-content__body__inner
        %button#facebook-login.btn-facebook
          = icon('fab', 'facebook-square fa-2x',class: "facebook")
          Facebookでログイン
        %button#google-login.btn-google
          = icon('fab', 'google fa-2x',class: "google")
          Googleでログイン

      = form_with url: "/", method: :get, class: "login-content__body__form",local: true do |f|

        .login-form-inner
          .form-group
            = f.text_field :email, placeholder:"メールアドレス", class:"input-form"
            -# %input.login-input-text.input-default{:name => "email", :placeholder => "メールアドレス", :type => "email", :value => ""}/
          .form-group
            = f.password_field :password, placeholder:"パスワード", class:"input-form"
          = f.submit "ログイン", class:"btn-defoultred"
          = link_to "/",class:"reset" do
            パスワードをお忘れの方

    .single-container  
      %footer
        = render "products/footer"