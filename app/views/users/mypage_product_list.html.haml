%header
    = render "products/top_header"
%main.l-main.box
    .l-product_list
    %section.mypage-tab-container
        %h2.mypage-tab-head 出品した商品
        %ul.listing-tabs
            %li.active
                %h3
                = link_to  "#mypage-tab-transaction-now", class: "data-toggle" do
                    出品中
            %li
                %h3
                = link_to  "", class: "data-toggle" do
                    取引中
            %li
                %h3
                = link_to  "", class: "data-toggle" do
                    売却済み
        .tab-content
            %ul#mypage-tab-transaction-now.mypage-item-list.tab-pane.active
            %li
                %a.mypage-item-link{:href => "https://www.mercari.com/jp/items/m98749264901/"}
                    %figure
                    %img.is-higher-height.lazyloaded{:alt => "", "data-src" => "//static.mercdn.net/thumb/photos/m98749264901_1.jpg?1578032041", :src => "//static.mercdn.net/thumb/photos/m98749264901_1.jpg?1578032041"}/
                .mypage-item-body.show-stock-item
                    .mypage-item-text
                    シューキープ　バック
                    %div
                    %span.listing-item-count
                        %i.icon-like-border
                        %span 0
                    %span.listing-item-count
                        %i.icon-message
                        %span 0
                    .mypage-item-status.bold.awaiting
                        出品中
                %i.icon-arrow-right
    %ul.mypage-history.pager
        %li.pager-prev.pager-cell
        %a{:href => "/jp/mypage/listings/listing/?min_pager_id=5154562106"}
            %i.icon-arrow-left
        %li.pager-next.pager-cell
        %a{:href => "/jp/mypage/listings/listing/?max_pager_id=4908627893"}
            %i.icon-arrow-right
    = render "users/aside"
%aside
    = render "products/top_aside_footer"
%footer
    = render "products/top_footer"


