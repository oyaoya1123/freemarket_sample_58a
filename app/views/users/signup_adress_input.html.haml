.single-container
  %header 
    = render "signup_header.html"

  %main.address-main
    %section.address-main__content
      %h2.address-main__content__title 発送元・お届け先住所入力
      = form_with model: @user, url: users_signup_create_path, method: :post, local: true, class: "address-main__content__form" do |f|
        .content
          .form-group
            = f.label 'name',"お名前", class:"userinfo"
            %span.form-require 必須
            = f.text_field :address_last_name, class:"input-defoult", placeholder:"例) 山田", value:""
            = f.text_field :address_first_name, class:"input-defoult", placeholder:"例) 彩", value:""
            = render partial: 'error-messages', locals: {user: @user, column: "address_last_name"}
            = render partial: 'error-messages', locals: {user: @user, column: "address_first_name"}
          .form-group
            = f.label 'name',"お名前カナ"
            %span.form-require 必須
            = f.text_field :address_last_name_kana, class:"input-defoult", placeholder:"例) ヤマダ", value:""
            = f.text_field :address_first_name_kana, class:"input-defoult", placeholder:"例) アヤ", value:""
            = render partial: 'error-messages', locals: {user: @user, column: "address_last_name_kana"}
            = render partial: 'error-messages', locals: {user: @user, column: "address_first_name_kana"}
          .form-group
            = f.label 'zip_code1',"郵便番号"
            %span.form-require 必須
            = f.text_field :zip_code, class:"input-defoult", placeholder:"例) 123-4567",maxlength:"8",pattern:"\\d{3}-\\d{4}","data-region":"jp",value:""
            = render partial: 'error-messages', locals: {user: @user, column: "zip_code"}
          .form-group
            = f.label 'prefecture',"都道府県"
            %span.form-require 必須
            .select-wrap
              = icon("fas", "chevron-down")
              = f.select :prefecture,
                ["---", "北海道", "青森県"], {}, class:"select-defoult"
              = render partial: 'error-messages', locals: {user: @user, column: "prefecture"}
          .form-group
            = f.label 'city',"市区町村"
            %span.form-require 必須
            = f.text_field :city, class:"input-defoult", placeholder:"例) 横浜市緑区",value:""
            = render partial: 'error-messages', locals: {user: @user, column: "city"}
          .form-group
            = f.label 'address1_label',"番地"
            %span.form-require 必須
            = f.text_field :address1, class:"input-defoult", placeholder:"例) 青山1−1−1",value:""
            = render partial: 'error-messages', locals: {user: @user, column: "address1"}
          .form-group
            = f.label 'address2_label',"建物名"
            %span.form-arbitrary 任意
            = f.text_field :address2, class:"input-defoult", placeholder:"例) 柳ビル103",value:""
            = render partial: 'error-messages', locals: {user: @user, column: "address2"}
          .form-group
            = f.label 'telephone',"電話"
            %span.form-arbitrary 任意
            = f.number_field :address_phone_number, class:"input-defoult", placeholder:"例) 09012345678",value:""
            = render partial: 'error-messages', locals: {user: @user, column: "address_phone_number"}
          = f.submit "次へ進む",class:"btn-red"

  .single-container
    %footer 
      = render "signup_footer.html"
