%main.address-main
  %section.address-main__content
    %h2.address-main__content__title 発送元・お届け先住所入力
    = form_with url: "/", method: :get, class: "address-main__content__form",local: true do |f|
      .content
        .form-group
          = f.label 'name',"お名前", class:"userinfo"
          %span.form-require 必須
          = f.text_field :family_name, class:"input-defoult", placeholder:"例) 山田", value:""
          = f.text_field :family_name, class:"input-defoult", placeholder:"例) 彩", value:""
        .form-group
          = f.label 'name',"お名前カナ"
          %span.form-require 必須
          = f.text_field :family_name_kana, class:"input-defoult", placeholder:"例) ヤマダ", value:""
          = f.text_field :first_name_kana, class:"input-defoult", placeholder:"例) アヤ", value:""
        .form-group
          = f.label 'zip_code1',"郵便番号"
          %span.form-require 必須
          = f.text_field :zip_code1, class:"input-defoult", placeholder:"例) 123-4567",maxlength:"8",pattern:"\\d{3}-\\d{4}","data-region":"jp",value:""

        .form-group
          = f.label 'prefecture',"都道府県"
          %span.form-require 必須
          .select-wrap
            = icon("fas", "chevron-down")
            = f.select :prefuctur,
              {"---": 1, "北海道": 2, "青森県": 3}, {}, class:"select-defoult"
        
        .form-group
          = f.label 'city',"市区町村"
          %span.form-require 必須
          = f.text_field :city, class:"input-defoult", placeholder:"例) 横浜市緑区",value:""
        .form-group
          = f.label 'address1_label',"番地"
          %span.form-require 必須
          = f.text_field :address1, class:"input-defoult", placeholder:"例) 青山1−1−1",value:""
        .form-group
          = f.label 'address2_label',"建物名"
          %span.form-arbitrary 任意
          = f.text_field :address2, class:"input-defoult", placeholder:"例) 柳ビル103",value:""
        .form-group
          = f.label 'telephone',"電話"
          %span.form-arbitrary 任意
          = f.number_field :telephone, class:"input-defoult", placeholder:"例) 09012345678",value:""
        = f.submit "次へ進む",class:"btn-red"


