- if user.errors.any?
  - unless user.valid?
    - if errors = user.errors.full_messages_for(column.to_sym)
      %ul.has-error-text
        - errors.each do |error|
          %li.has-error
            - case error
            - when "都道府県は予約されています"
              = "都道府県を入力して下さい"
            - else
              = error